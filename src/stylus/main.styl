@import '../../node_modules/vuetify/src/stylus/main'

html, body, .mdl-layout-title, .application
    font-family "微软雅黑", "Microsoft Yahei", Helvetica, 'Helvetica Neue', Tahoma,Arial,sans-serif
    -webkit-font-smoothing antialiased

.main-card
    margin-top: 64px

@media screen and (max-width: 599px)
    .main-card
        margin-top: 10px

    .container
        padding: 20px 14px 24px 6px

/*  Common class  */
input[type=file]
    display: none

.hidden
    display: none

.invisible
    visibility: hidden

.cursor-p
    cursor: pointer

.dialog-box
    padding 20px 15px

/* Adjust list */
.list__group__items li
    padding-left: 36px    

@media screen and (max-width:600px)
    .list__group__items li
        padding-left: 0

.list__tile--link
    transition .3s!important

.list__tile--active.primary--text
    border-left 6px solid #dd4b39
    color rgba(0,0,0,0.87)!important

.list__tile--active::before
    background-color red!important
    width 20px
    height 76px

.list__group__header
    padding: 0 6px

.list__group__header__prepend-icon i
    font-size: 28px

.list__group__header__prepend-icon.primary--text
    color: rgba(0, 0, 0, 0.54)!important

// fix for the hover effect on list
.tile-hover .list__tile:hover, .list__group__items li:hover
    cursor: pointer
    background: rgba(0, 0, 0, .12)


/*  Nav  */
.card--flex-toolbar
    margin-top -64px

.color-nav > .toolbar__content
    height 128px!important
    background-image url('./assets/nav.png')
    background-position bottom
    background-size cover

.color-nav.scroll > .toolbar__content
    height: 64px!important

.ecourse-logo
    font-family "Poiret One", Helvetica, 'Helvetica Neue', Tahoma,Arial,sans-serif
    font-size 50px
    text-shadow 1px 2px #5f5f5f
    -webkit-user-select: none
    -moz-user-select: none
    -ms-user-select: none
    user-select: none

.setting-btn
    margin-right: 48px

@media screen and (max-width:600px)
    .color-nav > .toolbar__content
        height 64px!important

    .setting-btn
        margin-right: 24px

@media screen and (max-width:370px)
    .ecourse-logo
        font-size: 40px

/*  Left panel  */
aside.gray-bg
    background #fafafa!important

ul.striped li:nth-child(odd)
    background #F1F1F1

.course-head
    color #111111
    font-size 20px

.course-list li:last-child
    margin-bottom: -100px

.course-list-name
    color #757575
    font-size 18px

.personal-info {
    background-color #263238!important

    button {
        color #FFF!important
        font-size 19px
        margin-left 50px
    }
    .list__tile__title {
        color #FFF!important
        font-size 18px
    }
    .list__tile--avatar {
        font-family "Roboto","Helvetica","Arial",sans-serif
    }
    .list__tile--avatar .avatar img,
    .list__tile--avatar .avatar .icon {
        width 45px
        height 45px
    }
    .icon {
        vertical-align: baseline
    }
}


/*  Announce  */
.announce-dialog-box
    font-size: 18px;

.date-padding
    padding: 0 3px

.exp-search {
    transition: .3s
    visibility: hidden
    min-width: calc(100%/1.5)
    margin-right: calc(-100%/1.45)!important
}

.exp-search.open {
    visibility: visible
	margin-right: 16px!important
}

.notify.badge--overlap .badge__badge
    width: 10px
    height: 10px


/*  Textbook  */


/*  Score  */
ul.stripe li:not(.subheader):nth-child(even)
    background #F9F9F9

@media screen and (max-width:600px)
    .score-card .list__tile
        font-size: 14px

    .score-card button
        min-width: 60px

    .score-card .btn__content
        padding: 0

/*  Upload file  */
.upload-type
    cursor: pointer
    height: 109px!important

.upload-type p
    padding-top: 41px

.upload-wrapper:nth-child(odd) .upload-item
    margin-right: 6px

.upload-wrapper:nth-child(even) .upload-item
    margin-left: 6px

.upload-item
    margin-bottom: 5px
    border-radius: 2px
    cursor: pointer
    padding: 5px 5px 0 16px
    max-width: 300px
    background-color: #f2f2f2

.upload-item label
    color: rgba(0,0,0,0.54)!important

.white-text-field .input-group__input
    background-color: #FFF

.send-text-btn
    height: 154px
    font-size: 18px

@media screen and (max-width: 600px)
    #hw
        margin-top: -30px

    .upload-type
        height: 80px!important

    .upload-type p
        padding-top: 28px

    textarea
        height: 80px!important

    .send-text-btn
        height: 114px

    .upload-wrapper .upload-item
        margin-left: 0!important
        margin-right: 0!important


/*  animation  */

.page-move
  transition transform 1s

.page-enter-active, .page-leave-active
  transition all .4s;

.page-enter
  opacity 0
  transform translateX(-10%)

.page-leave-to
  opacity 0
  transform translateX(10%)

.page-enter-active, .page-leave-active
  transition all .4s

.page-enter
  opacity 0
  transform translateX(-10%)


.slide-enter, .slide-enter-active
    -webkit-transition all .5s ease
    -o-transition all .5s ease
    transition all .5s ease!important

.slide-enter, .slide-leave-to
    opacity 0

.slide-enter
    -webkit-transform translateX(-3rem)
    -ms-transform translateX(-3rem)
    transform translateX(-3rem)

.slide-leave, .slide-leave-active
    -webkit-transition all .4s ease!important
    -o-transition all .4s ease!important
    transition all .4s ease!important

.slide-leave-to
    -webkit-transform translateX(3rem)
    -ms-transform translateX(3rem)
    transform translateX(3rem)

